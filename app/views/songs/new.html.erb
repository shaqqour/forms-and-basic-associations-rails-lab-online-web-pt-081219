<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br><br>

  <%= f.label "Select Genre" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br><br>

  <h2>Notes</h2>

  <%= f.fields_for :notes do |note_form| %>
    <%= note_form.label :note %>
    <%= note_form.text_field :content, rows: 5, cols:50 %>
  <% end %>

  <br><br>

  <%= f.submit %>
<% end %>


